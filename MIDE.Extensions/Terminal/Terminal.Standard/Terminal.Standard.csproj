<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Terminal</RootNamespace>
    <AssemblyName>terminal</AssemblyName>
    <Authors>Vardir</Authors>
    <Company>Vardir Products</Company>
    <Product>MIDE Terminal</Product>
    <Description>A simple terminal extension for MIDE .NET</Description>
    <Copyright>Copyright 2019 Â© Andrew Satura</Copyright>
    <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="config.json" />
    <None Remove="Terminal.nuspec" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="config.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Terminal.nuspec">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <Reference Include="api">
      <HintPath>..\..\..\Publish\MIDE.Kernel\api.dll</HintPath>
    </Reference>
    <Reference Include="core">
      <HintPath>..\..\..\..\..\Console\MyCMD\CMD.Standard\bin\Release\netstandard2.0\core.dll</HintPath>
    </Reference>
    <Reference Include="FSharp.Core">
      <HintPath>..\..\..\..\..\Console\MyCMD\CMD.Standard\bin\Release\netstandard2.0\FSharp.Core.dll</HintPath>
    </Reference>
    <Reference Include="Parser">
      <HintPath>..\..\..\..\..\Console\MyCMD\CMD.Standard\bin\Release\netstandard2.0\Parser.dll</HintPath>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="set path=&quot;E:\Projects\C#\Libs\MIDE.NET\Publish\$(SolutionName)\\&quot;&#xD;&#xA;if not exist %path% mkdir %path%&#xD;&#xA;copy &quot;$(TargetDir)$(TargetFileName)&quot; %path%&#xD;&#xA;copy &quot;$(TargetDir)core.dll&quot; %path%&#xD;&#xA;copy &quot;$(TargetDir)FSharp.Core.dll&quot; %path%&#xD;&#xA;copy &quot;$(TargetDir)Parser.dll&quot; %path%&#xD;&#xA;copy &quot;$(TargetDir)config.json&quot; %path%&#xD;&#xA;copy &quot;$(TargetDir)Terminal.nuspec&quot; %path%" />
  </Target>

</Project>
